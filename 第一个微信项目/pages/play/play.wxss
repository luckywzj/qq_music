.play_content{
    width:100%;
    height:100%;
    position:relative
}
.blur {    
    -webkit-filter: blur(20px); 
    width:100%;
    height:550px;
    position:absolute
}
.bl{
    width:150px;
    height:180px;
    position:absolute;
    margin-left:20%;
    z-index:10
}
.blu{
 -webkit-animation:rotateImg 5s linear infinite;
    width: 170px ;
    height:170px;
    border-radius: 50%;
    position:absolute;
    margin-top:52%;
    margin-left:26%
}
.vb{
    z-index:9;
    width: 250px ;
    height:250px;
    border-radius: 50%;
    position:absolute;
    margin-top:40%;
    margin-left:16%
}
@keyframes rotateImg {
  0% {transform : rotate(0deg);}
  100% {transform : rotate(360deg);}
}

@-webkit-keyframes rotateImg {
    0%{-webkit-transform : rotate(0deg);}
  100%{-webkit-transform : rotate(360deg);}
}
