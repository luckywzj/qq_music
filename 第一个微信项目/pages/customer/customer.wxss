/**index.wxss**/
.content{
    height:100%
}
.container{
  width:90%;
  margin:0 auto;
}
.swiper-tab{  
    width: 100%;  
    text-align: center;  
    line-height: 80rpx;
    top:0;
    z-index: 2;
    background: #fff;
    display: flex;
    }  
.swiper-tab-list{  
    font-size: 35rpx;  
    display: inline-block;  
 
    color: #777777; 
    margin:0 auto 
}  
.on{ color: #256df3;  
    height:80rpx;
    border-bottom: 5rpx solid #256df3;
  }  
  
.swiper-box{   
    display: block; 
    width: 100%; 
    overflow: hidden;
    position: relative;
  }  
.swiper-box view{  
    text-align: center;  
}

.title{
    text-align:center;
    width:80%
}
.line-css,.line-mid {
    height: 2rpx;
    background: #d9d9d9;
    width:100%;
    margin: 2rpx 0;

}
text{
  height:50rpx
} 
canvas{
  width:100%;
  height:45%;
  margin-top:30rpx
}
.canvas1{
    margin-top:60rpx
}
.type{
    text-align:center;
    padding:20rpx 0 20rpx
}
.picker{
    font-size:0.8em;
    color:#256df3;
    margin-left:20rpx
}
.today{
    display: flex;
    margin-top:60rpx
}
.line-cos{
    height: 70rpx;
    background: #d9d9d9;
    width:2rpx;
    margin: 2rpx 0;
    margin-top:20rpx 
}
.line-mid{
    margin-top:60rpx
}
.date-pick{
  display:flex;
  width:80%;
  margin:0 auto
}
.start-day,
.end-day{
    width:45%;
    font-size:1em;
    background:#ffffff;
    display:flex;
    align:center
}
.mid-day{
    width:10%
}
.date-pick{
    margin-top:10rpx
}


.title {
	text-align: center;
	position: relative;
	margin-top: 20rpx;
	margin-bottom: 20rpx;
}
.back-btn {
	position: absolute;
	left: 20rpx;
	top: 0;
}
.slide-image{
    width:40rpx;
    height:40rpx
}